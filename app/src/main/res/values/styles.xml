<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="premiumAccent">#6C47FF</color>
    <color name="premiumCardBg">#232347</color>
    <color name="premiumInputBg">#2D2D4D</color>
    <color name="premiumButtonBg">#6C47FF</color>
    <color name="premiumButtonBgPressed">#4B2FCF</color>
    <color name="premiumText">#FFFFFF</color>
    <color name="premiumHint">#CCCCCC</color>
    <color name="premiumDivider">#444466</color>

    <style name="AppTheme.Premium" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_premium_gradient</item>
        <item name="android:textColor">@color/premiumText</item>
        <item name="android:buttonStyle">@style/PremiumButton</item>
        <item name="android:editTextStyle">@style/PremiumEditText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PremiumButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:textColor">@color/premiumText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PremiumEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColor">@color/premiumText</item>
        <item name="android:textColorHint">@color/premiumHint</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PremiumCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/premiumCardBg</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Existing styles below -->
    <style name="ProfileOptionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileOptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>