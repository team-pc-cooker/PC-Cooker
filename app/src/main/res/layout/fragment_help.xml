<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient_background"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find answers to common questions and get support"
            android:textSize="16sp"
            android:textColor="@color/ai_secondary_text"
            android:gravity="center" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/settings_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔍 Search FAQs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/settings_section_title"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Type your question here..."
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:background="@drawable/modern_edit_text_bg"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/settings_item_hint"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/clearSearchButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_clear"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="Clear search"
                            android:visibility="gone"
                            app:tint="@color/settings_item_hint" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Category Filters -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/settings_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📂 Filter by Category"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/settings_section_title"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/settings_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="❓ Frequently Asked Questions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/settings_section_title"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/faqContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Us Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/settings_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 Contact Us"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/settings_section_title"
                        android:layout_marginBottom="16dp" />

                    <!-- Availability -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"
                            app:tint="@color/settings_icon_tint"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Available Mon–Sat, 10:00 AM – 6:00 PM"
                            android:textSize="14sp"
                            android:textColor="@color/settings_item_text" />

                    </LinearLayout>

                    <!-- WhatsApp Numbers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WhatsApp Support:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_item_text"
                            android:layout_marginBottom="8dp" />

                        <!-- WhatsApp 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_whatsapp"
                                app:tint="@color/green"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/whatsapp1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+91 7897892656"
                                android:textSize="16sp"
                                android:textColor="@color/settings_icon_tint"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/copyWhatsapp1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📋 Copy"
                                android:textSize="12sp"
                                android:textColor="@color/settings_item_hint"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp" />

                        </LinearLayout>

                        <!-- WhatsApp 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_whatsapp"
                                app:tint="@color/green"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/whatsapp2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+91 7989592441"
                                android:textSize="16sp"
                                android:textColor="@color/settings_icon_tint"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/copyWhatsapp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📋 Copy"
                                android:textSize="12sp"
                                android:textColor="@color/settings_item_hint"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/settings_icon_tint"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/emailText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="help.pccooker@gmail.com"
                            android:textSize="16sp"
                            android:textColor="@color/settings_icon_tint"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/copyEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📋 Copy"
                            android:textSize="12sp"
                            android:textColor="@color/settings_item_hint"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Report Issue Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/settings_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐛 Report an Issue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/settings_section_title"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Found a bug or have a suggestion? Let us know and we'll fix it as soon as possible."
                        android:textSize="14sp"
                        android:textColor="@color/settings_item_text"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/reportIssueButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📧 Report Issue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/ai_button_primary"
                        android:gravity="center"
                        android:padding="16dp"
                        android:backgroundTint="@color/settings_icon_tint" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
