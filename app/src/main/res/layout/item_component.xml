<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_card"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp"
    android:minHeight="120dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/componentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@color/border_light"
        android:contentDescription="Component Image"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Component Name -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Component Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/amazon_black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <!-- Brand and Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/brandText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="14sp"
                android:textColor="@color/amazon_orange"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="@color/amazon_gray_dark" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Component description"
            android:textSize="14sp"
            android:textColor="@color/amazon_gray_dark"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Price and Rating Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/priceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₹0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/amazon_black" />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 ★"
                android:textSize="16sp"
                android:textColor="@color/amazon_gray_dark" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Add to Build"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/amazon_orange"
                android:textColor="@color/text_white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="14sp"
                android:backgroundTint="@color/amazon_blue"
                android:textColor="@color/text_white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
