<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_gradient_background"
        android:elevation="4dp"
        app:title="Admin Panel"
        app:titleTextColor="@color/white" />

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settings_card_background"
        app:tabTextColor="@color/settings_item_hint"
        app:tabSelectedTextColor="@color/settings_icon_tint"
        app:tabIndicatorColor="@color/settings_icon_tint"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refreshButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Refresh Requests"
            android:textSize="14sp"
            android:background="@drawable/ai_button_secondary"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- No Data Text -->
        <TextView
            android:id="@+id/noDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No requests found"
            android:textSize="16sp"
            android:textColor="@color/settings_item_hint"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        <!-- RecyclerView for Requests -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>

</LinearLayout> 