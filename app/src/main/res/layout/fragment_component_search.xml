<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Search Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/amazon_blue">

        <!-- Search Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search components..."
                android:background="@drawable/search_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/amazon_black"
                android:textColorHint="@color/amazon_gray_dark"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

            <Button
                android:id="@+id/filterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Filters"
                android:background="@drawable/button_secondary_bg"
                android:textColor="@color/text_white"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Filter Layout -->
        <LinearLayout
            android:id="@+id/filterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <!-- Price Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Range"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/minPriceInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Min Price"
                    android:background="@drawable/input_background"
                    android:padding="8dp"
                    android:textColor="@color/amazon_black"
                    android:textColorHint="@color/amazon_gray_dark"
                    android:inputType="numberDecimal"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/maxPriceInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Max Price"
                    android:background="@drawable/input_background"
                    android:padding="8dp"
                    android:textColor="@color/amazon_black"
                    android:textColorHint="@color/amazon_gray_dark"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/priceRangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Price: â‚¹100,000"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/priceRangeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:layout_marginBottom="16dp" />

            <!-- Filter Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clearFiltersButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:background="@drawable/button_secondary_bg"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/applyFiltersButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apply"
                    android:background="@drawable/button_primary_bg"
                    android:textColor="@color/text_white"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Search Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout> 