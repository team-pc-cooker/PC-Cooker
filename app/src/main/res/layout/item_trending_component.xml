<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="12dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/trending_card_background">

        <!-- Trending Indicator -->
        <View
            android:id="@+id/trendingIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/trending_indicator_gradient"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header with trending score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/trendingScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 95"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/trending_score_color"
                    android:background="@drawable/trending_score_badge"
                    android:padding="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROCESSOR"
                    android:textSize="12sp"
                    android:textColor="@color/category_text"
                    android:background="@drawable/modern_category_badge"
                    android:padding="8dp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Component Image -->
            <ImageView
                android:id="@+id/componentImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/modern_image_background"
                android:src="@drawable/ic_placeholder"
                android:contentDescription="Component Image"
                android:layout_marginBottom="16dp" />

            <!-- Component Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Name and Brand -->
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AMD Ryzen 7 7700X"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/brandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMD"
                    android:textSize="16sp"
                    android:textColor="@color/brand_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High-performance AMD processor with 8 cores for gaming and productivity"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

            <!-- Price and Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Price -->
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹27,822"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/price_color"
                    android:fontFamily="sans-serif-medium" />

                <!-- Rating Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/modern_rating_background"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="14sp"
                        android:textColor="@color/rating_text"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:id="@+id/reviewCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(250)"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Build Type Tag -->
            <TextView
                android:id="@+id/buildTypeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaming Build"
                android:textSize="11sp"
                android:textColor="@color/build_type_text"
                android:background="@drawable/build_type_badge"
                android:padding="6dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/addToBuildButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Add to Build"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/modern_primary_button"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Save Later"
                    android:textSize="14sp"
                    android:textColor="@color/brand_primary"
                    android:textStyle="bold"
                    android:background="@drawable/modern_secondary_button"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/compareButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_compare"
                    android:background="@drawable/circular_button_bg"
                    android:contentDescription="Compare"
                    android:layout_marginEnd="12dp"
                    android:elevation="2dp" />

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_share"
                    android:background="@drawable/circular_button_bg"
                    android:contentDescription="Share"
                    android:layout_marginEnd="12dp"
                    android:elevation="2dp" />

                <ImageButton
                    android:id="@+id/infoButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    android:background="@drawable/circular_button_bg"
                    android:contentDescription="More Info"
                    android:elevation="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>