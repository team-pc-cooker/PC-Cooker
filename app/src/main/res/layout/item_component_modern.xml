<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/amazon_white"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/componentImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@color/border_light"
            android:layout_marginBottom="12dp" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Brand and Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/brandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intel"
                    android:textSize="13sp"
                    android:textColor="@color/amazon_orange"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROCESSOR"
                    android:textSize="13sp"
                    android:textColor="@color/amazon_gray_medium"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Product Name -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intel Core i5-12400F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/amazon_black"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6-core processor for gaming and productivity"
                android:textSize="14sp"
                android:textColor="@color/amazon_gray_dark"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="10dp" />

            <!-- Price and Rating Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹15,999"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/amazon_black" />

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 ★"
                    android:textSize="14sp"
                    android:textColor="@color/amazon_orange"
                    android:textStyle="bold"
                    android:background="@drawable/rating_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/selectButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Add to Build"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/amazon_orange"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Save for Later"
                    android:textSize="13sp"
                    android:backgroundTint="@color/amazon_blue"
                    android:textColor="@color/text_white"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 