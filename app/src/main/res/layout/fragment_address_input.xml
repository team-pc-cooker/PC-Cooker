<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Address"
            android:inputType="textPostalAddress"
            android:minLines="3"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputLandmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landmark (e.g., Near City Mall)"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/stateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/citySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save address as:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <RadioGroup
            android:id="@+id/addressLabelGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:id="@+id/radioHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/radioOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/inputCustomLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter custom label"
            android:visibility="gone"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSaveAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Address"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btnViewSavedAddresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Saved Addresses"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>


    </LinearLayout>
</ScrollView>