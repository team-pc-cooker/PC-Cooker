<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Row: Image + Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/componentImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_image_placeholder"
                android:src="@drawable/ic_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/componentNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Component Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/componentDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description here"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/componentPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹12,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/amazon_orange"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/ratingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                app:tint="@color/error_red"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="top|end" />
        </LinearLayout>

        <!-- Quantity controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="@color/background_secondary"
            android:padding="12dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/decrementButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_remove"
                android:background="@drawable/bg_quantity_btn"
                android:padding="6dp"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/quantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:minWidth="32dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/incrementButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/bg_quantity_btn"
                android:padding="6dp"
                android:backgroundTint="@color/white" />
        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/saveForLaterBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="SAVE"
                android:textSize="12sp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/button_secondary_bg"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/moveToCartBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="MOVE TO CART"
                android:textSize="12sp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/button_primary_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
