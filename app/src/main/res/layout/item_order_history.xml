<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_card_bg"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/orderIdText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order #12345678"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/ai_primary_text" />

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUCCESS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/ai_success"
            android:background="@drawable/status_badge_bg"
            android:padding="4dp"
            android:minWidth="60dp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/orderDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 Jan 2024, 12:00 PM"
        android:textSize="12sp"
        android:textColor="@color/ai_secondary_text"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/orderAmountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚¹1,500.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/ai_primary" />

        <TextView
            android:id="@+id/itemCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 items"
            android:textSize="12sp"
            android:textColor="@color/ai_secondary_text"
            android:background="@drawable/circle_bg"
            android:padding="4dp"
            android:minWidth="40dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout> 