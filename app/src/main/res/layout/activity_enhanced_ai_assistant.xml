<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ai_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/ai_header_background"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/aiBackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI PC Builder Assistant"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ai_primary_text" />

            <TextView
                android:id="@+id/aiStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Ready to help"
                android:textSize="12sp"
                android:textColor="@color/ai_secondary_text"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/aiHistoryButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_history"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Conversation History" />

        <ImageButton
            android:id="@+id/aiClearButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_clear"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Clear Conversation" />

    </LinearLayout>

    <!-- Context Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/ai_context_background">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/aiContextText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Context: New session started"
            android:textSize="12sp"
            android:textColor="@color/ai_context_text" />

    </LinearLayout>

    <!-- Conversation Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiConversationRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/ai_input_background"
        android:elevation="8dp">

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/aiBuildButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="🚀 Build PC"
                android:textSize="12sp"
                android:background="@drawable/ai_button_primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/aiSuggestButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="💡 Suggest"
                android:textSize="12sp"
                android:background="@drawable/ai_button_secondary"
                android:textColor="@color/ai_primary_text"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/aiHelpButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="❓ Help"
                android:textSize="12sp"
                android:background="@drawable/ai_button_secondary"
                android:textColor="@color/ai_primary_text"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Input Field with Voice Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ai_input_background_rounded"
            android:padding="4dp">

            <EditText
                android:id="@+id/aiPromptInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Describe your PC requirements... (e.g., 'Gaming PC under ₹80,000')"
                android:textSize="14sp"
                android:background="@null"
                android:padding="12dp"
                android:maxLines="3"
                android:inputType="textMultiLine|textCapSentences"
                android:textColor="@color/ai_primary_text"
                android:textColorHint="@color/ai_hint_text" />

            <ImageButton
                android:id="@+id/aiMicButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice Input" />

            <ImageButton
                android:id="@+id/aiCameraButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Camera Input" />

        </LinearLayout>

        <!-- Example Prompts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 Try these examples:"
                android:textSize="12sp"
                android:textColor="@color/ai_secondary_text"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎮 Gaming PC ₹80k"
                        android:textSize="11sp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/ai_example_chip"
                        android:textColor="@color/ai_primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💻 Work PC ₹60k"
                        android:textSize="11sp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/ai_example_chip"
                        android:textColor="@color/ai_primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎬 Editing PC ₹1.2L"
                        android:textSize="11sp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/ai_example_chip"
                        android:textColor="@color/ai_primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 Student PC ₹50k"
                        android:textSize="11sp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/ai_example_chip"
                        android:textColor="@color/ai_primary_text" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 