<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sky_blue_gradient"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Sell Your PC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Computer Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Type *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/sellComputerTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_background" />

        <!-- Year -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/sellYearSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_background" />

        <!-- Model -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model/Brand *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/sellModelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Dell Inspiron, HP Pavilion, etc."
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Condition -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/conditionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_background" />

        <!-- Specifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specifications *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/specificationsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Intel i5, 8GB RAM, 512GB SSD, Windows 10..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Contact Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/contactInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your contact number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="24dp" />

        <!-- Media Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ Upload Photos/Videos (Optional)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Storage Status Indicator -->
        <LinearLayout
            android:id="@+id/storageStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/storageStatusIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="8dp"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/storageStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Checking storage availability..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add photos or videos of your PC to help us better evaluate your request"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Media Upload Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/uploadPhotoButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“· Photo"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_secondary_bg"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:padding="12dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/uploadVideoButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ¥ Video"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_secondary_bg"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:padding="12dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Media Preview Area -->
        <LinearLayout
            android:id="@+id/mediaPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Media:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mediaPreviewRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/input_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitSellButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Sell Request"
            android:backgroundTint="@color/sky_blue_primary"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="16dp"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView> 