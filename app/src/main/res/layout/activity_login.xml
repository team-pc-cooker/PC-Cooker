<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/pc_cooker_logo"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC Cooker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/login_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Your Dream PC"
            android:textSize="16sp"
            android:textColor="@color/login_text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Login Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/login_card_background"
            android:elevation="8dp"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/login_card_background">

            <!-- Tab Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_tab_background"
                android:padding="4dp">

                <Button
                    android:id="@+id/emailTabButton"
                    android:background="@drawable/login_tab_left_selector"
                    android:textColor="@color/login_tab_text_active"
                    android:text="Email"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/mobileTabButton"
                    android:background="@drawable/login_tab_right_selector"
                    android:textColor="@color/login_tab_text_inactive"
                    android:text="Mobile OTP"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Email Login Section -->
            <LinearLayout
                android:id="@+id/emailLoginSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/login_input_background"
                    android:padding="12dp"
                    android:textColor="@color/login_text_primary"
                    android:textColorHint="@color/login_text_hint"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@drawable/login_input_background"
                    android:padding="12dp"
                    android:textColor="@color/login_text_primary"
                    android:textColorHint="@color/login_text_hint"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/loginButton"
                    android:background="@drawable/login_button_primary"
                    android:textColor="@color/login_button_text"
                    android:text="Login with Email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/googleSignInButton"
                    android:background="@drawable/login_button_secondary"
                    android:textColor="@color/login_button_text"
                    android:text="Login with Google"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Mobile OTP Section -->
            <LinearLayout
                android:id="@+id/mobileLoginSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/mobileInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Mobile Number (+91)"
                    android:inputType="phone"
                    android:background="@drawable/login_input_background"
                    android:padding="12dp"
                    android:textColor="@color/login_text_primary"
                    android:textColorHint="@color/login_text_hint"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/sendOtpButton"
                    android:background="@drawable/login_button_primary"
                    android:textColor="@color/login_button_text"
                    android:text="Send OTP"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp"
                    android:stateListAnimator="@null"/>

                <EditText
                    android:id="@+id/otpInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter 6-digit OTP"
                    android:inputType="number"
                    android:maxLength="6"
                    android:background="@drawable/login_input_background"
                    android:padding="12dp"
                    android:textColor="@color/login_text_primary"
                    android:textColorHint="@color/login_text_hint"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/verifyOtpButton"
                    android:background="@drawable/login_button_primary"
                    android:textColor="@color/login_button_text"
                    android:text="Verify OTP"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Links Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/registerLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? Register here"
                    android:textColor="@color/login_primary"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/forgotPasswordLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textColor="@color/login_primary"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>