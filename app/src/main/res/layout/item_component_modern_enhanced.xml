<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardMaxElevation="16dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_lift_animator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/card_gradient_background">

        <!-- Trending Badge -->
        <TextView
            android:id="@+id/trendingBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="🔥 TRENDING"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/trending_badge_bg"
            android:padding="6dp"
            android:visibility="gone"
            android:elevation="2dp" />

        <!-- Component Image with Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/componentImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/modern_image_background"
                android:src="@drawable/ic_placeholder"
                android:contentDescription="Component Image"
                android:elevation="1dp" />

            <!-- Stock Status Overlay -->
            <TextView
                android:id="@+id/stockStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="12dp"
                android:text="IN STOCK"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/stock_badge_bg"
                android:padding="6dp"
                android:elevation="2dp" />

            <!-- Price Badge -->
            <TextView
                android:id="@+id/priceBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:text="₹0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/price_badge_bg"
                android:padding="8dp"
                android:elevation="2dp" />

        </FrameLayout>

        <!-- Component Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Component Name -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Component Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <!-- Brand and Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/brandText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brand"
                    android:textSize="16sp"
                    android:textColor="@color/brand_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textColor="@color/category_text"
                    android:background="@drawable/modern_category_badge"
                    android:padding="8dp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Component description goes here with detailed information about features and specifications..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2" />

            <!-- Specifications Preview -->
            <LinearLayout
                android:id="@+id/specsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/spec1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spec 1"
                    android:textSize="11sp"
                    android:textColor="@color/spec_text"
                    android:background="@drawable/spec_chip_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/spec2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spec 2"
                    android:textSize="11sp"
                    android:textColor="@color/spec_text"
                    android:background="@drawable/spec_chip_bg"
                    android:padding="6dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rating and Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rating Stars -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/modern_rating_background"
                android:padding="8dp">

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"
                    android:textColor="@color/rating_text"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/reviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(250)"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Build Type Tags -->
            <TextView
                android:id="@+id/buildTypeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaming"
                android:textSize="11sp"
                android:textColor="@color/build_type_text"
                android:background="@drawable/build_type_badge"
                android:padding="6dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons with Modern Design -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/selectButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Add to Build"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/modern_primary_button"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:elevation="4dp"
                android:stateListAnimator="@animator/button_press_animator" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save Later"
                android:textSize="14sp"
                android:textColor="@color/brand_primary"
                android:textStyle="bold"
                android:background="@drawable/modern_secondary_button"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:elevation="2dp"
                android:stateListAnimator="@animator/button_press_animator" />

        </LinearLayout>

        <!-- Quick Actions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/compareButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_compare"
                android:background="@drawable/circular_button_bg"
                android:contentDescription="Compare"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share"
                android:background="@drawable/circular_button_bg"
                android:contentDescription="Share"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info"
                android:background="@drawable/circular_button_bg"
                android:contentDescription="More Info"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>