<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/amazon_blue"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC Cooker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build Your Dream PC"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- ðŸ”„ Image Slider -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_card_bg"
            android:elevation="4dp" />

        <!-- ðŸ” Search Bar with AI Assistant -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search components..."
                android:padding="16dp"
                android:background="@drawable/search_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <ImageButton
                android:id="@+id/aiAssistantButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_ai_assistant"
                android:background="@drawable/button_primary_bg"
                android:contentDescription="AI Assistant"
                android:padding="12dp"
                app:tint="@color/text_white" />
        </LinearLayout>

        <!-- ðŸ§± Menu Buttons -->
        <Button
            android:id="@+id/buildPcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Build Your PC"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary_bg"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/serviceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                            android:text="ðŸ”§ PC Service &amp; Repair"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_secondary_bg"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sellPcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Sell Your PC"
            android:background="@drawable/button_secondary_bg"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="20dp"
            android:textSize="18sp" />

        <!-- Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Why Choose PC Cooker?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ ðŸŽ¯ AI-Powered Component Recommendations\nâ€¢ ðŸ”§ Compatibility Checking\nâ€¢ ðŸ’° Budget Optimization\nâ€¢ ðŸšš Fast Delivery\nâ€¢ ðŸ›¡ï¸ Warranty Support"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
