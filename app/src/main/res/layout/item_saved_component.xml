<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/rounded_card_bg"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/componentImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/componentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Component Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/ai_primary_text"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/componentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/ai_primary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/componentRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 0.0"
            android:textSize="12sp"
            android:textColor="@color/ai_secondary_text"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Add to Cart"
            android:textSize="10sp"
            android:background="@drawable/ai_button_primary"
            android:textColor="@android:color/white"
            android:minWidth="80dp" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Remove"
            android:textSize="10sp"
            android:background="@drawable/ai_button_secondary"
            android:textColor="@color/ai_error"
            android:minWidth="80dp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout> 