<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Essential permissions for PC Cooker functionality -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Floating chat overlay permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Profile image permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Optional permissions with clear usage -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Notification permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PCCooker"
        android:usesCleartextTraffic="false"
        android:extractNativeLibs="false"
        android:hardwareAccelerated="true">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AIAssistantActivity"
            android:exported="false">
        </activity>
        
        <activity
            android:name=".EnhancedAIAssistantActivity"
            android:exported="false"
            android:theme="@style/Theme.PCCooker">
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
        
        <activity
            android:name=".SignUpActivity"
            android:exported="false">
        </activity>
        
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false">
        </activity>
        
        <activity
            android:name=".BuildPCActivity"
            android:exported="false" />
            
        <activity android:name=".ManageAddressActivity" />
        <activity android:name=".EditAddressActivity" />
        <activity android:name=".AdminPanelActivity" />
        <activity android:name=".CategoryComponentActivity" />
        <activity android:name=".BuildSummaryActivity" />
        <activity android:name=".ComponentListActivity" />
        <activity android:name=".AddComponentActivity" />
        <activity android:name=".OtherPartsActivity" />
        <activity android:name=".RemoveDuplicatesActivity" />
        <activity android:name=".TrendingComponentsActivity" />
        <activity android:name=".BuildManagerActivity" />
        <activity android:name=".ChatbotActivity" />
        <activity android:name=".FloatingChatDemoActivity" />
        <activity android:name=".WarrantyPolicyActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".ProfileSettingsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ProfileStatsActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".MyOrdersActivity" />
        <activity android:name=".PCServiceRepairActivity" />
        <activity android:name=".SellYourPCActivity" />
        <activity android:name=".HelpAndSupportActivity" />
        
        <!-- Floating Chat Service -->
        <service
            android:name=".services.FloatingChatService"
            android:enabled="true"
            android:exported="false" />
            
        <!-- FileProvider for sharing PDF invoices -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        

    </application>

</manifest>